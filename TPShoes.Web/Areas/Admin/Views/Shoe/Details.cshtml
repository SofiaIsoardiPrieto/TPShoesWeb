@model List<SizeShoe>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Size List";
}
<div class="container">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.ElementAt(0).SizeShoeId" />
    <input type="hidden" asp-for="@Model.ElementAt(0).ShoeId" />
    <div class="row mb-3">
        <div class="col-6">
            <h3>Size List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Shoe" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Volver
            </a>
        </div>
          <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="Shoe" asp-action="EditSize" asp-route-ShoeId="@Model.ElementAt(0).ShoeId">
                <i class="bi bi-plus-circle"></i>
                Nuevo
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Size</th>
                <th>Stock</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr id="@item.SizeShoeId">

                        <td>@item.Size.SizeNumber</td>
                        <td>@item.Stock</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Shoe" asp-action="EditSize" asp-route-ShoeId="@item.ShoeId" asp-route-SizeId="@item.SizeId">
                                    <i class="bi bi-pencil-square"></i>&nbsp; Edit
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Shoes added yet!</td>
                </tr>
            }
        </tbody>
    </table>
    @*    <partial name="_Pager" model="@Model" /> *@


</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/common.js"></script>
}