@model SizeShoeListVm
@{
    ViewData["Title"] = "Edit SizeShoe";
   
}
<form method="post" asp-action="EditSize" asp-comtroller="Shoe"  class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SizeShoeId" />
      <input type="hidden" asp-for="SizeId" />
    <input type="hidden" asp-for="ShoeId" />
    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>     
        <div class="form-group col-3 py-2">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" class="form-control" type="number" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        @if (Model.SizeShoeId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Create
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Edit
            </button>

        }
        <a asp-action="Details" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}