@model SizeShoeEditVm
@{
    ViewData["Title"] = "Edit SizeShoe";
   
}
<form method="post" asp-action="EditSize" asp-comtroller="Shoe"  class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SizeShoeId"/>  
    <input type="hidden" asp-for="ShoeId" />
    @* <input type="hidden" asp-for="SizeId" /> *@
    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.SizeShoeId == 0 ? "Add Size" : "Edit Size")</h2>

        </div>   
        
         @if (Model.SizeShoeId == 0)
        {
            <div class="form-group row py-2">
                <label asp-for="SizeId"></label>
                <select asp-for="SizeId" class="form-select" asp-items="Model.Sizes">
                    <option selected disabled>Select Size</option>
                </select>
                <span asp-validation-for="SizeId" class="text-danger"></span>

            </div>
        }else{
            <label>Size</label>
            <input type="text" asp-for="SizeId" />
            <div class="form-group row py-2">
                <label asp-for="@Model.SizeId"></label>
                <select asp-for="@Model.SizeId" disabled class="form-select" asp-items="Model.Sizes">
                    
                </select>
                <span asp-validation-for="@Model.SizeId" class="text-danger"></span>

            </div>

        }
        <div class="form-group col-3 py-2">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" class="form-control" type="number" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
           
        @if (Model.SizeShoeId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Create
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Edit
            </button>

        }
        <a asp-area="Admin" asp-controller="Shoe" asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}