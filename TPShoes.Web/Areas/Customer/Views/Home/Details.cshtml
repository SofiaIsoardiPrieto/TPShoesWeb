﻿
@model IEnumerable<SizeListVm>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Size List";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="col-6">
            <h3>Size List </h3>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Volver
            </a>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>Numero</th>
              

            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr id="@item.SizeId">

                        <td>@item.SizeNumber</td>
                       
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Shoes added yet!</td>
                </tr>
            }
        </tbody>
    </table>
    @*    <partial name="_Pager" model="@Model" /> *@


</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/common.js"></script>
}