@model IPagedList<BrandListVm>
@using X.PagedList
@using X.Web.PagedList

@{
	ViewData["Title"] = "Listado de Brands";
}

@Html.AntiForgeryToken()
<div class="row w-75 mb-4">
	<div class="col-6">
		<h3>Lista de Bands</h3>
	</div>
</div>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Brand</th>			
			<th>
				<div class="col-6">
					<a asp-controller="Brand" asp-action="UpSert" class="btn btn-primary">
						<i class="bi bi-plus-circle-dotted"></i>
						Nuevo
					</a>
				</div>
			</th>
		</tr>
	</thead>
	<tbody>
		@if (Model.Any())
		{
			foreach (var item in Model)
			{
				<tr>
					<td>@item.BrandName</td>
					

					<td>
						<a onclick="Delete('/TiposDePlantas/Delete/@item.BrandId',@item.BrandId)" class="btn btn-danger">
							<i class="bi bi-trash-fill"></i>
							Borrar
						</a>
						<a asp-controller="Shoe" asp-action="UpSert" asp-route-id="@item.BrandId" class="btn btn-warning">
							<i class="bi bi-pencil-square"></i>
							Editar
						</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td>Error con el model</td>
			</tr>
		}
	</tbody>
</table>
<partial name="_Pager" model="@Model" />

</div>
@section Scripts {
	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
	<script src="~/js/common.js"></script>
}