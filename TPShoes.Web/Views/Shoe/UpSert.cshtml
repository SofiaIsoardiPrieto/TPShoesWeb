@model ShoeEditVm
@{
    ViewData["Title"] = "New/Edit Shoe";
}
<form method="post" asp-action="UpSert" class="w-75">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ShoeId" />

    <div class="border p-3 bg-white">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">@(Model.ShoeId == 0 ? "Add Shoe" : "Edit Shoe")</h2>

        </div>
        <div class="form-group row py-2">
            <label asp-for="BrandId"></label>
            <select asp-for="BrandId" class="form-select" asp-items="Model.Brands">
                <option selected disabled>Select Supplier</option>
            </select>
            <span asp-validation-for="Model" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="Model"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>

        </div>
         <div class="form-group row py-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group row py-2">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.05" min="1000" max="99999999999" />
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        @if (Model.ShoeId == 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-floppy2-fill"></i>
                Create
            </button>
        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Edit
            </button>

        }
        <a asp-action="Index" class="btn btn-success btn-block">
            <i class="bi bi-backspace"></i>
            Back to List
        </a>


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}