@model ShoeEditVm

@{
    ViewData["Title"] = "Agregar Shoe";
}
<form method="post" asp-controller="Shoe" asp-action="Create">
    <input type="hidden" asp-for="ShoeId" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.ShoeId == 0 ? "Agregar Shoe" : "Editar Shoe")</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      @*  <div class="mb-3">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="form-control" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
       *@
        @if (Model.ShoeId == 0)
        {
            <button type="submit" class="btn btn-success">
                <i class="bi bi-floppy-fill"></i>
                Guardar
            </button>

        }
        else
        {
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-pencil"></i>
                Guardar
            </button>

        }
        <a asp-controller="Shoe" asp-action="Index" class="btn btn-info">
            <i class="bi bi-backspace"></i>
            Volver
        </a>


    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
