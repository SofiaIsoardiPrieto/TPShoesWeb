﻿
@model IPagedList<ShoeListVm>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Shoe List";
}
<div class="container">
    @Html.AntiForgeryToken()
    <div class="row mb-3">
        <div class="col-6">
            <h3>Shoe List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Shoe" asp-action="UpSert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Nuevo
            </a>
        </div>
    </div>
    <form method="get" class="form-inline" asp-action="Index">
        <div class="d-flex flex-row align-items-center">
            <div class="col-auto mx-1">
                <label for="pageSize">Show:</label>
            </div>
            <div class="col-auto mx-2">
                <select class="form-select" id="pageSize" name="pageSize" onchange="this.form.submit()" style="width:70px">
                    @{
                        var options = new List<int> { 5, 10, 15, 20 };
                        foreach (var option in options)
                        {
                            if (ViewBag.currentPageSize == option)
                            {
                                <option selected value="@option">@option</option>

                            }
                            else
                            {
                                <option value="@option">@option</option>

                            }
                        }
                    }
                </select>
            </div>
            <div class="col-auto mx-2" style="width: 200px;">
                <input type="text" name="searchTerm" id="searchTerm" class="form-control" placeholder="Search by..." value="@ViewBag.currentSearchTerm" />
            </div>
            <div class="col-auto d-flex">
                <button type="submit" class="btn btn-primary mx-2">
                    <i class="bi bi-search"></i> Search
                </button>
                <button type="submit" class="btn btn-secondary" id="viewAll" name="viewAll" value="true">
                    <i class="bi bi-list"></i> View All
                </button>
            </div>
        </div>
    </form>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Brand</th>
                <th>Genre</th>
                <th>Colour</th>
                <th>Sport</th>
                <th>Model</th>
                <th>Description</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr id="@item.ShoeId">
                        <td>@item.Brand</td>
                        <td>@item.Genre</td>
                        <td>@item.Colour</td>
                        <td>@item.Sport</td>
                        <td>@item.Model</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>
                            <div class="d-flex gap-2">
                                <a class="btn btn-warning" asp-controller="Shoe" asp-action="UpSert" asp-route-id="@item.ShoeId">
                                    <i class="bi bi-pencil-square"></i>&nbsp; Edit
                                </a>
                                <a onclick="Delete('/Shoe/Delete/@item.ShoeId',@item.Model,'@item.ShoeId')" class="btn btn-danger">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No Shoes added yet!</td>
                </tr>
            }
        </tbody>
    </table>
    <partial name="_Pager" model="@Model" />


</div>
@section Scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/common.js"></script>
}