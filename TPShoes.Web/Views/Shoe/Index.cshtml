<h3 class="text-center">
	Lista de Shoes
</h3>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Brand</th>
			<th>Genre</th>
			<th>Colour</th>
			<th>Sport</th>
			<th>Model</th>
			<th>Description</th>
			<th>Price</th>
			<th>
				<div class="col-6">
					<a asp-controller="Shoe" asp-action="Create" class="btn btn-primary">
						<i class="bi bi-plus-circle-dotted"></i>
						Nuevo
					</a>
				</div>
			</th>
		</tr>
		
	</thead>
	<tbody>
		@if	(Model.Any())
		{
			foreach (var item in Model)
			{
			
				<tr>
					<td>@item.Brand</td>
					<td>@item.Genre</td>
					<td>@item.Colour</td>
					<td>@item.Sport</td>
					<td>@item.Model</td>
					<td>@item.Description</td>
					<td>@item.Price</td>

					<td>
						<a onclick="Delete('/TiposDePlantas/Delete/@item.ShoeId',@item.ShoeId)" class="btn btn-danger">
							<i class="bi bi-trash-fill"></i>
							Borrar
						</a>
						<a asp-controller="Shoe" asp-action="UpSert" asp-route-id="@item.ShoeId" class="btn btn-warning">
							<i class="bi bi-pencil-square"></i>
							Editar
						</a>
					</td>
				</tr>
			}
		}else
		{
			<tr>
				<td>Error con el model</td>
			</tr>
		}
	</tbody>
</table>